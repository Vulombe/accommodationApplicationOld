<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accomodation System"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button1"
        android:id="@+id/btnAc1"
        android:layout_above="@+id/btnAc2"
        android:layout_alignLeft="@+id/btnAc2"
        android:layout_alignStart="@+id/btnAc2"
        android:layout_marginBottom="40dp"
        android:onClick="goToActivityTwo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button3"
        android:id="@+id/btnAc3"
        android:layout_above="@+id/btnAc4"
        android:layout_alignLeft="@+id/btnAc2"
        android:layout_alignStart="@+id/btnAc2"
        android:layout_marginBottom="32dp"
        android:onClick="goToActivityThree"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button4"
        android:id="@+id/btnAc4"
        android:layout_marginBottom="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnAc3"
        android:layout_alignStart="@+id/btnAc3"
        android:onClick="goToActivityFour"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button2"
        android:id="@+id/btnAc2"
        android:layout_above="@+id/btnAc3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:onClick="goToActivityViewData"/>
</RelativeLayout>
